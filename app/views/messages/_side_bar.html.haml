.wrapper
  .chat-side
    .side-header
      .side-header__box
        %h3.side-header__box__user-name 
          = current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menu__create-group
            = link_to "#", class: "create-grouop" do
              = icon('fas', 'edit')
          %li.side-header__box__menu__edit-user
            = link_to edit_user_path(current_user) do
              = icon('fas', 'cog', class: 'icon')
    .groups
      = link_to "#", class: "groups" do
        .group
          %p.group__group-name 1
          %p.group__last-remark おはよう
